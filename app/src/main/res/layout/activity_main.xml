<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    tools:context="com.example.me.wifidirectbi_directional.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.9"
        tools:ignore="UselessParent">
        <fragment
            class="com.example.me.wifidirectbi_directional.DeviceListFragment"
            android:id="@+id/frag_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:layout="@layout/device_list"
            android:name="com.example.me.wifidirectbi_directional.DeviceListFragment"
         />

        <fragment
            class="com.example.me.wifidirectbi_directional.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/device_detail"
            android:name="com.example.me.wifidirectbi_directional.DeviceDetailFragment"
        />
    </LinearLayout>
</LinearLayout>
